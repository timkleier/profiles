<h1>Listing matrices</h1>

<table>
  <tr>
    <th>Year</th>
    <th>Period</th>
    <th>Type</th>
    <th>Status</th>
    <th>Cost center</th>
    <th>Account</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matrices.each do |matrix| %>
  <tr>
    <td><%= matrix.year %></td>
    <td><%= matrix.period %></td>
    <td><%= matrix.profile_type %></td>
    <td><%= matrix.status %></td>
    <td><%= matrix.cost_center_id %></td>
    <td><%= matrix.account_id %></td>
    <td><%= matrix.amount %></td>
    <td><%= link_to 'Show', matrix %></td>
    <td><%= link_to 'Edit', edit_matrix_path(matrix) %></td>
    <td><%= link_to 'Destroy', matrix, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

